<% title 'Sign In'%>

<%= form_for @user_session, :url => user_sessions_path do |f| %>
  <%= f.error_messages %>
  <p>
	  <%= f.label :login, "Username or Email" %><br />
	  <%= f.text_field :login %>
  </p>
  <p>
  	<%= f.label :password %><br />
  	<%= f.password_field :password %>
  </p>  
  <p>
  	<%= f.check_box :remember_me %><%= f.label :remember_me %>
  </p>	
  <p>
  	<%= f.submit "Sign In" %>
  </p>
  <p>
  	<%= link_to "Reset Password", new_password_reset_path %>
  </p>	
<% end %>